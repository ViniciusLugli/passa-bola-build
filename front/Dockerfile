FROM node:20-alpine AS builder

WORKDIR /app

# Aceita variáveis de build para Next.js
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_CHATBOT_URL
ARG NEXT_PUBLIC_CHAT_WS_URL
ARG NEXT_PUBLIC_NOTIFICATION_WS_URL
ARG NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# Define como variáveis de ambiente para o build
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_CHATBOT_URL=$NEXT_PUBLIC_CHATBOT_URL
ENV NEXT_PUBLIC_CHAT_WS_URL=$NEXT_PUBLIC_CHAT_WS_URL
ENV NEXT_PUBLIC_NOTIFICATION_WS_URL=$NEXT_PUBLIC_NOTIFICATION_WS_URL
ENV NEXT_PUBLIC_ENABLE_WEBSOCKET=$NEXT_PUBLIC_ENABLE_WEBSOCKET

COPY package.json package-lock.json ./
RUN npm install

COPY . .
RUN npm run build

FROM node:20-alpine
WORKDIR /app

# Copia variáveis para runtime também
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_CHATBOT_URL=$NEXT_PUBLIC_CHATBOT_URL
ENV NEXT_PUBLIC_CHAT_WS_URL=$NEXT_PUBLIC_CHAT_WS_URL
ENV NEXT_PUBLIC_NOTIFICATION_WS_URL=$NEXT_PUBLIC_NOTIFICATION_WS_URL
ENV NEXT_PUBLIC_ENABLE_WEBSOCKET=$NEXT_PUBLIC_ENABLE_WEBSOCKET

COPY --from=builder /app/.next ./.next
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/public ./public
COPY --from=builder /app/package.json ./package.json

EXPOSE 3000
CMD ["npm", "start"]
